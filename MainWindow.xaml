<Window x:Class="Labb_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb_3"
        mc:Ignorable="d"
        Title="Bokningssystem" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>

        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="16" Text="Bokningar" >

        </TextBlock>
        <Label Name="dateLabel" Content="Datum" Grid.Column="4" Grid.Row="1">
        </Label>
        <DatePicker Grid.Column="4" Grid.Row="2" Text="Välj datum" Name ="datepicker1">
        </DatePicker>
        <Label Content="Tid" Grid.Column="4" Grid.Row="3"/>
        <ComboBox Name="timeComboBox" Grid.Column="4" Grid.Row="4" VerticalAlignment="Center" IsEditable="False" >
            <ComboBoxItem Name ="time1" Content = "18.00" />
            <ComboBoxItem Name ="time2" Content = "18.30" />
            <ComboBoxItem Name ="time3" Content = "19.00" />
            <ComboBoxItem Name ="time4" Content = "19.30" />
            <ComboBoxItem Name ="time5" Content = "20.00" />
            <ComboBoxItem Name ="time6" Content = "20.30" />
            <ComboBoxItem Name ="time7" Content = "21.00" />
            <ComboBoxItem Name ="time8" Content = "21.30" />
            <ComboBoxItem Name ="time9" Content = "22.00" />
        </ComboBox>
        <Label Content="Bordsnummer" Grid.Column="6" Grid.Row="3"/>
        <ComboBox Name="tableNumberComboBox" Grid.Column="6" Grid.Row="4" VerticalAlignment="Center" IsEditable="False">
            <ComboBoxItem Name="table1" Content ="1" />
            <ComboBoxItem Name="table2" Content ="2" />
            <ComboBoxItem Name="table3" Content ="3" />
            <ComboBoxItem Name="table4" Content ="4" />
            <ComboBoxItem Name="table5" Content ="5" />
            <ComboBoxItem Name="table6" Content ="6" />
            <ComboBoxItem Name="table7" Content ="7" />
            <ComboBoxItem Name="table8" Content ="8" />
            <ComboBoxItem Name="table9" Content ="9" />
        </ComboBox>

        <Label Content="Namn" Grid.Column="6" Grid.Row="1"/>
        <TextBox Name ="nameTextBox" Grid.Column="6" Grid.Row="2">
        </TextBox>
        <ListBox Name="reservationListBox" Grid.Column="1" Grid.Row =" 3" Grid.RowSpan="4">
        </ListBox>
        
        <Button Name="reservationButton" Content="Boka" Grid.Column="4" Grid.Row="7" Height="20" VerticalAlignment="Top" Click="reservationButton_Click">
        </Button>

    </Grid>

</Window>
